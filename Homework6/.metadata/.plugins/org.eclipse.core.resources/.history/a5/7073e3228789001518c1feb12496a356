
public class DomashnoZadatca1 {

	public static void main(String[] args) {

		int[] myArray = { 9, 4, 2, 4, 5, 6 };

		int result = 0;

		for (int row = 0; row < myArray.length; row++) {

			if (row % 2 == 0) {

				result = result + myArray[row];

			}

		}

		System.out.println("Сборът на четните числа от масива е : " + result);

	}
}
